<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" >

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="5dp" >


		<ImageView
			android:id="@+id/popup_dialog_imageview"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_marginRight="5dp"
			android:layout_width="100dp"
			android:layout_height="100dp" />

		<TextView
			android:id="@+id/popup_dialog_name"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@id/popup_dialog_imageview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="1dp"
			android:textStyle="bold"
			android:textSize="20sp" />

		<LinearLayout
			android:id="@+id/popup_dialog_score_layout"
			android:layout_below="@id/popup_dialog_name"
			android:layout_toRightOf="@id/popup_dialog_imageview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="1dp"
			android:gravity="center_vertical"
			android:orientation="horizontal" >

			<ImageView
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:paddingRight="4dp"
				android:src="@drawable/ic_star" />

			<TextView
				android:id="@+id/popup_dialog_score"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="3dp"
				android:textSize="14sp" />

		</LinearLayout>

		<TextView
			android:id="@+id/popup_dialog_desc"
			android:layout_below="@id/popup_dialog_score_layout"
			android:layout_toRightOf="@id/popup_dialog_imageview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp" />

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:gravity="center_horizontal"
		android:orientation="horizontal" >

		<Button
			android:id="@+id/popup_dialog_share_button"
			android:layout_width="75dp"
			android:layout_height="wrap_content"
			android:text="@string/share" />

		<Button
			android:id="@+id/popup_dialog_dismiss_button"
			android:layout_width="75dp"
			android:layout_height="wrap_content"
			android:text="@string/ok" />

	</LinearLayout>

</LinearLayout>
