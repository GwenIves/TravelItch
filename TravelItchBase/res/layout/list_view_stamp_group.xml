<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:padding="8dp" >

	<ImageView
		android:id="@+id/list_view_stamp_group_imageview"
		android:layout_marginLeft="?android:attr/expandableListPreferredItemPaddingLeft"
		android:layout_marginRight="10dp"
		android:layout_width="28dp"
		android:layout_height="28dp" />

	<TextView
		android:id="@+id/list_view_stamp_group_text_view"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:textSize="17sp" />

	<TextView
		android:id="@+id/list_view_stamp_group_earned_ratio"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="17sp" />

</LinearLayout>
